# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                           @controllers.HierarchyController.index
GET         /tree                       @controllers.HierarchyController.index
GET         /deploy                     @controllers.DeployController.deploy

GET         /config/environments        @controllers.ConfigController.environments
GET         /config/:env                @controllers.ConfigController.params(env)

GET         /actors                     @controllers.HierarchyController.actors
POST        /addChild                   @controllers.HierarchyController.addChild
POST        /quit                       @controllers.HierarchyController.quit

GET         /messages                   @controllers.HierarchyController.messages
POST        /ping                       @controllers.HierarchyController.ping
POST        /throwException             @controllers.HierarchyController.throwException

# Map static resources from the /public folder to the /assets URL path
#GET         /assets/*file         play.api.controllers.Assets.versioned(path="/public", file: Asset)

GET         /webjars/*file              controllers.WebJarAssets.at(file)
#GET        /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)
GET         /assets/*file               controllers.Assets.at(path="/public", file)

